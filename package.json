{
  "name": "ts-hapi-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_PATH=./src nodemon --exec ts-node src/app.ts",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "migration:generate": "typeorm migration:create -c migration -n $1",
    "migrate": "npm run typeorm -- migration:run -c migration",
    "migrate:down": "npm run typeorm -- migration:revert -c migration",
    "seed:generate": "typeorm migration:create -c seed -n $1",
    "seed": "npm run typeorm -- migration:run -c seed",
    "seed:down": "npm run typeorm -- migration:revert -c seed",
    "start": "NODE_PATH=./dist/src node dist/src/app.js",
    "test": "jest -c test/jest.config.js",
    "pretest:integration": "npm run migrate",
    "test:integration": "jest -c test/jest.integration.config.js",
    "typeorm": "NODE_PATH=./src ts-node ./node_modules/typeorm/cli.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/hapi": "^19.1.1",
    "@hapi/inert": "^6.0.1",
    "@hapi/joi": "^17.1.1",
    "@hapi/vision": "^6.0.0",
    "class-transformer": "^0.2.3",
    "dotenv": "^8.2.0",
    "hapi-swagger": "^12.1.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.1.1",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^19.0.2",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  }
}
